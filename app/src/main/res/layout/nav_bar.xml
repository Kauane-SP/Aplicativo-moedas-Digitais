<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.bottomnavigation.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_bar"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/coin_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/botao_lista_de_moedas"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_main"
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:backgroundTint="@color/black"
                android:padding="100dp"
                android:src="@drawable/ic_baseline_attach_money_30" />

            <TextView
                android:id="@+id/txt_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:text="@string/button_coins"
                android:textColor="#9c9c9c" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/botao_moedas_favoritas"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_star"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="@color/black"
                android:padding="100dp"
                android:src="@drawable/ic_baseline_star_30" />

            <TextView
                android:id="@+id/txt_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:text="@string/button_favorite"
                android:textColor="#9c9c9c" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.bottomnavigation.BottomNavigationView>