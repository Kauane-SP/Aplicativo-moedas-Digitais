<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/card_coin_favorit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_card_favorit_item"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/coin_name_favorit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#F3F3F3"
            tools:text="text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/coin_sub_name_favorit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="text"
            android:textColor="#F3F3F3"
            app:layout_constraintTop_toBottomOf="@id/coin_name_favorit"
            app:layout_constraintLeft_toLeftOf="@id/coin_name_favorit"
            app:layout_constraintRight_toRightOf="@id/coin_name_favorit"/>

        <TextView
            android:id="@+id/coin_value_favorit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="text"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="#F3F3F3"
            app:layout_constraintRight_toRightOf="@id/coin_sub_name_favorit"
            app:layout_constraintLeft_toLeftOf="@id/coin_sub_name_favorit"
            app:layout_constraintTop_toBottomOf="@id/coin_sub_name_favorit" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/coin_icon_favorit"
        tools:src="@tools:sample/avatars"
        android:layout_width="35dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="@id/card_coin_favorit"
        app:layout_constraintTop_toTopOf="@id/card_coin_favorit"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

